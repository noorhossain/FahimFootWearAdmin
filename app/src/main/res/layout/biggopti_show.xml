<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".BiggoptiShow"
    android:orientation="vertical"
    android:background="#36111111"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_home_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="5dp"
        card_view:contentPaddingTop="5dp"
        card_view:cardElevation="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >
            <TextView

                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:id="@+id/txtHeader"
                android:text="Mens Shoes"
                android:textColor="@color/dark_green"/>
            <ProgressBar
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/inViewProrgress"
                android:layout_width="30dp"
                android:layout_weight="1"
                android:layout_height="30dp"/>

            <ImageView
                android:layout_gravity="center"
                android:foregroundGravity="right"
                android:id="@+id/imgOptionsSettings"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_settings_grey"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>






<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BiggoptiShow"
        android:id="@+id/layoutSwipeRefresh"
        >




    <ListView
        android:id="@+id/list_view"
        android:cacheColorHint="@android:color/transparent"
        android:background="@android:color/transparent"
        android:drawSelectorOnTop="false"
        android:persistentDrawingCache="scrolling"
        android:scrollingCache="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
       />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>

